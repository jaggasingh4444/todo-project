<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

<style>
* { box-sizing: border-box; margin:0; padding:0; }

body {
    font-family: 'Roboto', sans-serif;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
}

/* Blurred background image */
body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/background.jpg') no-repeat center center fixed;
    background-size: cover;
    filter: blur(8px);
    z-index: -1;
}

.login-wrapper {
    width: 90%;
    max-width: 400px;
    background: rgba(255,255,255,0.95);
    padding: 35px 25px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    position: relative;
    z-index: 1;
}

h2 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 26px;
    color: #333;
}

/* Clear all icon */
.clear-all {
    position: absolute;
    top: 15px;
    right: 15px;
    cursor: pointer;
    color: #2575fc;
    font-size: 18px;
    transition: color 0.3s ease;
}

.clear-all:hover {
    color: #6a11cb;
}

.form-group {
    display: flex;
    flex-direction: column;
    margin-bottom: 15px;
}

.form-group label {
    margin-bottom: 5px;
    font-weight: 500;
    color: #333;
    font-size: 14px;
}

.form-group input {
    padding: 10px 12px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 15px;
    transition: all 0.3s ease;
    width: 100%;
}

.form-group input:focus {
    outline: none;
    border-color: #2575fc;
    box-shadow: 0 0 8px rgba(37,117,252,0.4);
}

/* Password wrapper for eye icon */
.password-wrapper {
    position: relative;
}

.password-wrapper i {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    color: #2575fc;
    font-size: 16px;
    transition: color 0.3s ease;
}

.password-wrapper i:hover {
    color: #6a11cb;
}

button {
    width: 100%;
    padding: 12px;
    background: #2575fc;
    color: #fff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    margin-top: 10px;
    transition: all 0.3s ease;
}

button:hover {
    background: #6a11cb;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

p.error {
    color: red;
    font-weight: 500;
    margin-bottom: 10px;
    text-align: center;
    font-size: 14px;
}

p a {
    color: #2575fc;
    text-decoration: none;
}

p a:hover {
    color: #6a11cb;
}

/* Mobile Adjustments */
@media (max-width: 480px) {
    .login-wrapper { 
        padding: 25px 15px; 
    }
    h2 { 
        font-size: 22px; 
    }
    .form-group label { 
        font-size: 13px; 
    }
    .form-group input { 
        font-size: 14px; 
        padding: 8px 10px; 
    }
    .password-wrapper i { 
        font-size: 14px; 
    }
    button { 
        font-size: 14px; 
        padding: 10px; 
    }
    .clear-all { 
        font-size: 16px; 
        top: 10px; 
        right: 10px; 
    }
}
</style>
</head>

<body>

<div class="login-wrapper">
    <h2>Login Page</h2>

    <!-- Clear All Icon -->
    <i class="fa-solid fa-arrows-rotate clear-all" title="Clear All Fields" onclick="clearAllFields()"></i>

    <p class="error"><%= error %></p>

    <!-- ðŸ”¥ FIXED FORM -->
    <form action="/login" method="POST" autocomplete="off">

        <!-- Fake fields (Chrome will not autofill your real ones) -->
        <input type="text" name="dummyuser" style="display:none" autocomplete="off">
        <input type="password" name="dummypass" style="display:none" autocomplete="new-password">

        <div class="form-group">
            <label for="email">Email</label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                autocomplete="off"
            >
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <div class="password-wrapper">
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    autocomplete="new-password"
                >
                <i class="fa-solid fa-eye" id="togglePassword" onclick="togglePassword('password', this)"></i>
            </div>
        </div>

        <button type="submit">Login</button><br><br>
        <p>Don't have an account? <a href="/register">Register</a></p>
    </form>
</div>

<script>
function togglePassword(id, icon) {
    const input = document.getElementById(id);
    if (input.type === "password") {
        input.type = "text";
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        input.type = "password";
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
}

// Clear all fields
function clearAllFields() {
    document.getElementById('email').value = '';
    document.getElementById('password').value = '';
    document.querySelector('.error').textContent = '';
}
</script>
<footer style="
    text-align: center;
    background-color: #2575fc;
    color: white;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 16px;
    margin-top: 20px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    width: calc(100% - 40px);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
">
    &copy; 2025 Jagdish Pandey. All rights reserved.
</footer>


</body>
</html>
